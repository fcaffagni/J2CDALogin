<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="J2CDALogin.Protegida"
             Title="Protegida">
    
    <VerticalStackLayout VerticalOptions="Center" Padding="10" Spacing="10">
        <Frame>
            <VerticalStackLayout>
                <Label Text="Áre Protegida"
                       FontSize="Large"
                       HorizontalTextAlignment="Center" />
                <Label x:Name="lblBoasVindas"
                       Padding="10"
                       HorizontalTextAlignment="Center" />
                <Button Text="Desconectar"
                        Padding="10"
                        Clicked="Button_Clicked"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>